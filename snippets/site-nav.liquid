<nav class="topbar-nav WFwrap">
  <ul class="metismenu">
    {% for link in linklists[section.settings.main_linklist].links %}
      {% assign child_list_handle = link.title | handleize -%}
      {% if linklists[child_list_handle].links != blank %}
        <li class="nav-item {% if link.active %}active{% endif %}"><a href="{{ link.url }}">{{ link.title | escape }}</a>
          <ul class="submenu">
            {% for childlink in linklists[child_list_handle].links %}
            {% assign grand_child_list_handle = childlink.title | handle %}
            {% if linklists[child_list_handle].links != blank %}           
            <li class="nav-item {% if childlink.active %}active{% endif %}"><a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
              {% for grandchildlink in linklists[grand_child_list_handle].links %}
              <ul class="submenu">
                <li class="nav-item {% if grandchildlink.active %}active{% endif %}"><a href="{{ grandchildlink.url }}">{{ grandchildlink.title | escape }}</a></li>
              </ul>
              {% endfor %}
            </li>
            {% else %}
            <li class="nav-item"><a href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
            {% endif %}
            {% endfor %}
          </ul>
        </li> 
      {% else %}
      	<li class="nav-item {% if link.active %}active{% endif %}"><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>
