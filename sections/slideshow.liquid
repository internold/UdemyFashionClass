<!-- SLIDER -->
<div data-section-id="{{ section.id }}" data-section-type="slideshow-section">
<section class="slider-section">
  {% if section.blocks.size > 0 %}
  <div class="container">
    <div class="slider-part">
      <div class="home-slider-section">
        <ul class="home-slider" id="Slideshow-{{ section.id }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}">
          {% for block in section.blocks %}
          <li class="{{ block.id }}" {{ block.shopify_attributes }}>
            <img src="{% if block.settings.image.size > 0 %}{{ block.settings.image | img_url: '850x522' }}{% else %}{{ 'slider_1.jpg' | asset_url }}{% endif %}" alt="{{ block.settings.image.alt }}" class="lazyload desktop-img">
            <img src="{% if block.settings.mobile_image.size > 0 %}{{ block.settings.mobile_image | img_url: '540x512' }}{% else %}{{ 'slider_1.jpg' | asset_url }}{% endif %}" alt="{{ block.settings.mobile_image.alt }}" class="lazyload mobile-img">
            <div class="fig-caption">
              <div class="small-content 
                          {% if block.settings.alignment == 'right' %}float-xs-right
                          {% elsif block.settings.alignment == 'center' %}float-xs-none text-xs-center
                          {% else %}float-xs-left
                          {% endif %}
                          ">
                <h1 style="color:{{ block.settings.slider_heading_color }}">{{ block.settings.title }}</h1>
                <h5 style="color:{{ block.settings.slider_subheading_color }}">{{ block.settings.subheading }}</h5>
                <a href="{{ block.settings.button_link }}" class="btn shop-now">{{ block.settings.button_txt }}</a></div>
            </div>
          </li>
          {% endfor %}
        </ul>
      </div>
      <div class="home-banner-section">
        <div class="home-banner"> 
          <a href="{{ section.settings.sliderBanner_link_1 }}">
          <figure><img src="{% if section.settings.sliderBanner_image_1.size > 0 %}{{ section.settings.sliderBanner_image_1 | img_url: '330x260' }}{% else %}{{ 'slider_banner_1.jpg' | asset_url }}{% endif %}" alt="{{ section.settings.sliderBanner_image_1.alt }}">
            <figcaption>
              <h5 style="color:{{ section.settings.sliderBanner_subtitle_txt_color_1 }}">{{ section.settings.sliderBanner_subtitle_1 }}</h5>
              <p style="color:{{ section.settings.sliderBanner_title_txt_color_1 }}">{{ section.settings.sliderBanner_title_1 }}</p>
            </figcaption>
          </figure>
          </a> 
          <a href="{{ section.settings.sliderBanner_link_2 }}">
          <figure><img src="{% if section.settings.sliderBanner_image_2.size > 0 %}{{ section.settings.sliderBanner_image_2 | img_url: '330x260' }}{% else %}{{ 'slider_banner_2.jpg' | asset_url }}{% endif %}" alt="{{ section.settings.sliderBanner_image_2.alt }}">
            <figcaption>
              <h5 style="color:{{ section.settings.sliderBanner_subtitle_txt_color_2 }}">{{ section.settings.sliderBanner_subtitle_2 }}</h5>
              <p style="color:{{ section.settings.sliderBanner_title_txt_color_2 }}">{{ section.settings.sliderBanner_title_2 }}</p>
            </figcaption>
          </figure>
          </a> 
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  {% if section.blocks.size == 0 %}
  <div class="placeholder-noblocks">
    {{ 'homepage.onboarding.no_content' | t }}
  </div>
  {% endif %}
</section>
</div>

